package com.spring.mappers;

import java.util.List;

import org.apache.ibatis.annotations.Param;

import com.spring.vo.BoardVO;

public interface BoardMapper  {
	
	public int getAllCount();

	public List<BoardVO> getAllBoard(@Param("start")int start,@Param("count") int count) throws Exception;
	
	public BoardVO getOneBoard(int num);
	
	public void upReadCount(int num);
	
	public int getRef();

	public int insertBoard(BoardVO bean, int ref);

	public int setReLevel(int ref, int re_level);

	public int reWriteBoard(BoardVO bean);
}
